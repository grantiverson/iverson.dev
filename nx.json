{
    "$schema": "node_modules/nx/schemas/nx-schema.json",
    "namedInputs": {
        "build": ["!{projectRoot}/build/**"]
    },
    "targetDefaults": {
        "build": {
            "inputs": ["build", "^build"],
            "dependsOn": ["^build"]
        },
        "start": {
            "dependsOn": []
        },
        "test": {
            "inputs": ["!{projectRoot}/coverage/**"],
            "outputs": ["{projectRoot}/coverage"]
        }
    },
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build", "format", "lint", "test"]
            }
        }
    }
}
